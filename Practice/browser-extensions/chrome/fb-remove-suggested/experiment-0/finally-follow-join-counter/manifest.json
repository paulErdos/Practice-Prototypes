{
  "manifest_version": 3,
  "name": "Span Text Counter",
  "version": "1.1",
  "description": "Counts spans with configurable text",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}