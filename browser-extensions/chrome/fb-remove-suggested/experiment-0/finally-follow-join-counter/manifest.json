{
  "manifest_version": 3,
  "name": "Finally Follow Join Counter",
  "version": "1.0",
  "description": "Counts spans with 'Finally', 'Follow', or 'Join' text",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": "icon.png"
  }
}